<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="WeatherApp.GetWeatherPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Welcome to WeatherApp!" FontSize="Title" Padding="30,10,30,10" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        <Button x:Name="weatherButton" Text="УЗНАТЬ ПОГОДУ" Clicked="Weather_Click" />
        <Button x:Name="alarmButton" Text="УСТАНОВИТЬ БУДИЛЬНИК" Clicked="Alarm_Click" />
    </StackLayout>
</ContentPage>